<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="centerInside"
            android:src="@drawable/code_48" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/gradleImplementationInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:helperText="Paste The Gradle Implementation Here.\ne.g: implementation('org.joe.biden:mamalib:0.6.9')">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <requestFocus />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/libraryDetailsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleType="centerInside"
                android:src="@drawable/rename_96_blue" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/libraryNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:helperText="Library Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleType="centerInside"
                android:src="@drawable/code_48" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/libraryPkgInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:helperText="Gradle Implementation">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <CheckBox
            android:id="@+id/useDxForCompilingCheckbox"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/compile_the_library_explicitly_with_dx"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/libraryDownloadProgressView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/libraryDownloadMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Downloading library" />

            <TextView
                android:id="@+id/libraryDownloadProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0%" />


        </LinearLayout>

        <ProgressBar
            android:id="@+id/libraryDownloadProgressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100" />


    </LinearLayout>

</LinearLayout>