    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // DOM Elements
            const registrationScreen = document.getElementById('registrationScreen');
            const mainMenuScreen = document.getElementById('mainMenuScreen');
            const newContactModal = document.getElementById('newContactModal');
            const chatScreen = document.getElementById('chatScreen');
            const phoneNumberInput = document.getElementById('phoneNumber');
            const phoneError = document.getElementById('phoneError');
            const registerBtn = document.getElementById('registerBtn');
            const newChatBtn = document.getElementById('newChatBtn');
            const closeModalBtn = document.getElementById('closeModalBtn');
            const cancelContactBtn = document.getElementById('cancelContactBtn');
            const saveContactBtn = document.getElementById('saveContactBtn');
            const contactPhoneInput = document.getElementById('contactPhone');
            const contactPhoneError = document.getElementById('contactPhoneError');
            const contactNameInput = document.getElementById('contactName');
            const contactsList = document.getElementById('contactsList');
            const backToContactsBtn = document.getElementById('backToContactsBtn');
            const messageInput = document.getElementById('messageInput');
            const sendMessageBtn = document.getElementById('sendMessageBtn');
            const chatMessages = document.getElementById('chatMessages');
            const chatContactName = document.getElementById('chatContactName');
            const chatContactStatus = document.getElementById('chatContactStatus');
            const userStatus = document.getElementById('userStatus');
            const refreshBtn = document.getElementById('refreshBtn');
            
            // App State
            let currentUser = JSON.parse(localStorage.getItem('currentUser')) || null;
            let contacts = JSON.parse(localStorage.getItem('contacts')) || [];
            let currentChatContact = null;
            
            // Initialize the app
            function initApp() {
                if (currentUser) {
                    // User is already registered
                    showMainMenu();
                    updateUserStatus();
                } else {
                    // Show registration screen
                    registrationScreen.classList.remove('hidden');
                }
            }
            
            // Show main menu
            function showMainMenu() {
                registrationScreen.classList.add('hidden');
                mainMenuScreen.classList.remove('hidden');
                renderContacts();
            }
            
            // Show chat screen
            function showChatScreen(contact) {
                currentChatContact = contact;
                mainMenuScreen.classList.add('hidden');
                chatScreen.classList.remove('hidden');
                chatContactName.textContent = contact.name || `مستخدم ${contact.phone}`;
                chatContactStatus.textContent = getRandomStatus();
                renderMessages();
            }
            
            // Show new contact modal
            function showNewContactModal() {
                newContactModal.classList.remove('hidden');
                contactPhoneInput.value = '';
                contactNameInput.value = '';
            }
            
            // Hide new contact modal
            function hideNewContactModal() {
                newContactModal.classList.add('hidden');
            }
            
            // Update user status
            function updateUserStatus() {
                if (currentUser) {
                    const statusText = document.createElement('span');
                    statusText.className = 'text-sm hidden md:inline-block mr-2';
                    statusText.textContent = currentUser.phone;
                    
                    const statusDot = document.createElement('div');
                    statusDot.className = 'w-3 h-3 rounded-full bg-green-500';
                    
                    userStatus.innerHTML = '';
                    userStatus.appendChild(statusText);
                    userStatus.appendChild(statusDot);
                }
            }
            
            // Get random status for contacts
            function getRandomStatus() {
                const statuses = ['متصل الآن', 'كان متصلاً قبل ساعة', 'غير متصل', 'مشغول'];
                return statuses[Math.floor(Math.random() * statuses.length)];
            }
            
            // Render contacts list
            function renderContacts() {
                contactsList.innerHTML = '';
                
                if (contacts.length === 0) {
                    contactsList.innerHTML = `
                        <div class="text-center py-10 text-gray-500">
                            <i class="fas fa-users text-4xl mb-3 opacity-30"></i>
                            <p>لا توجد جهات اتصال</p>
                        </div>
                    `;
                    return;
                }
                
                contacts.forEach(contact => {
                    const contactElement = document.createElement('div');
                    contactElement.className = 'p-3 border-b border-gray-100 flex items-center hover:bg-gray-50 cursor-pointer transition';
                    contactElement.innerHTML = `
                        <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 mr-3">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="flex-1">
                            <h3 class="font-medium">${contact.name || `مستخدم ${contact.phone}`}</h3>
                            <p class="text-xs text-gray-500">${getRandomStatus()}</p>
                        </div>
                        <div class="text-gray-400">
                            <i class="fas fa-chevron-left"></i>
                        </div>
                    `;
                    
                    contactElement.addEventListener('click', () => showChatScreen(contact));
                    contactsList.appendChild(contactElement);
                });
            }
            
            // Render messages in chat
            function renderMessages() {
                chatMessages.innerHTML = '';
                
                if (!currentChatContact.messages || currentChatContact.messages.length === 0) {
                    chatMessages.innerHTML = `
                        <div class="text-center py-10 text-gray-500">
                            <i class="fas fa-comments text-4xl mb-3 opacity-30"></i>
                            <p>ابدأ محادثة جديدة</p>
                        </div>
                    `;
                    return;
                }
                
                currentChatContact.messages.forEach(message => {
                    const isCurrentUser = message.sender === currentUser.phone;
                    
                    const messageElement = document.createElement('div');
                    messageElement.className = `flex ${isCurrentUser ? 'justify-start' : 'justify-end'}`;
                    
                    const bubble = document.createElement('div');
                    bubble.className = `chat-bubble p-3 rounded-lg ${isCurrentUser ? 'bg-blue-100 text-gray-800' : 'bg-blue-600 text-white'} rounded-${isCurrentUser ? 'tr' : 'tl'}-none`;
                    bubble.textContent = message.text;
                    
                    me
