                        <button id="refreshBtn" class="p-1 rounded-full hover:bg-blue-700 transition">
                            <i class="fas fa-sync-alt"></i>
                        </button>
                    </div>
                </div>
                
                <!-- Search Bar -->
                <div class="p-3 bg-gray-50">
                    <div class="relative">
                        <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                            <i class="fas fa-search text-gray-400"></i>
                        </div>
                        <input type="text" id="searchContact" class="bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pr-10 py-2 pl-3" placeholder="ابحث عن جهة اتصال...">
                    </div>
