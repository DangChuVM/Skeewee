            <!-- New Contact Modal (Hidden) -->
            <div id="newContactModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50 hidden">
                <div class="bg-white rounded-lg shadow-xl w-full max-w-md transform transition-all fade-in">
                    <div class="p-4 border-b border-gray-200 flex justify-between items-center">
                        <h3 class="text-lg font-medium">إضافة جهة اتصال جديدة</h3>
